                    <div class="form-group"><label>Background Color</label><div class="form-fields"><input type="text" class="color" name="rest.background.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="rest.background.color" value=""></div></div>
                    <div class="form-group"><label>Text Color</label><div class="form-fields"><input type="text" class="color" name="rest.text.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="rest.text.color" value=""></div></div>
                </div>
            </details>
        </div>
        <div>
            <details name="details-color">
                <summary>Tooltip</summary>
                <div>
                    <p class="notes">Choose between available themes or create a custom one.</p>
                    <div class="form-group"><label>Border Color</label><div class="form-fields"><input type="text" class="color" name="tooltip.border.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="tooltip.border.color" value=""></div></div>
                    <div class="form-group"><label>Background Color</label><div class="form-fields"><input type="text" class="color" name="tooltip.background.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="tooltip.background.color" value=""></div></div>
                    <div class="form-group"><label>Text Color</label><div class="form-fields"><input type="text" class="color" name="tooltip.text.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="tooltip.text.color" value=""></div></div>
                </div>
            </details>
        </div>
    </div>
    <div class="dialog-buttons">
        <button type="submit" class="dialog-button">
            <i class="fas fa-save"></i>
            {{localize "BG3.Settings.ContainerAutoPopulate.Save"}}
        </button>
    </div>
