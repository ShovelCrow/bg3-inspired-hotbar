                    <div class="form-group"><label>Text Color</label><div class="form-fields"><input type="text" class="color" name="filter.text.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="filter.text.color" value=""></div></div>
                </div>
            </details>
        </div>
        <div>
            <details name="details-color">
                <summary>Passive Effects</summary>
                <div>
                    <p class="notes">Choose between available themes or create a custom one.</p>
                    <div class="form-group"><label>Border Color</label><div class="form-fields"><input type="text" class="color" name="passive.border.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="passive.border.color" value=""></div></div>
                    <div class="form-group"><label>Background Color</label><div class="form-fields"><input type="text" class="color" name="passive.background.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="passive.background.color" value=""></div></div>
                    <div class="form-group"><label>Text Color</label><div class="form-fields"><input type="text" class="color" name="passive.text.color" data-dtype="String" value=""><input type="color" data-exclude="true" data-edit="passive.text.color" value=""></div></div>
